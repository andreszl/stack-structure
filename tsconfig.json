{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./build/",
    "removeComments": true,    
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types" : ["node"],
    "esModuleInterop": true
  },
  "files": [
   "./api/**/*",
   "./client/src/**/*"
 ],
 "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}


